{% extends 'base.html.twig' %}
{% block body %}
    <h1>Classe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>ATT de base</th>
                <th>DEF de base</th>
                <th>PV de base</th>
                <th>VIT de base</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td>{{ classe.nom }}</td>
                <td>{{ classe.baseATT }}</td>
                <td>{{ classe.baseDEF }}</td>
                <td>{{ classe.basePV }}</td>
                <td>{{ classe.baseVIT }}</td>
                <td>
                    <a href="{{ path('app_classe_show', {'id': classe.id}) }}">show</a>
                    <a href="{{ path('app_classe_edit', {'id': classe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_classe_new') }}">Create new</a>
{% endblock %}
